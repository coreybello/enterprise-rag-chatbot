# Application Configuration
APP_NAME="Enterprise RAG Chatbot"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
CORS_ORIGINS="*"

# LLM Provider Configuration
LLM_PROVIDER="vllm"  # vllm or openrouter

# vLLM Configuration (for local inference)
VLLM_BASE_URL="http://localhost:8001"
VLLM_MODEL_NAME="microsoft/DialoGPT-medium"
VLLM_MAX_TOKENS=2048
VLLM_TEMPERATURE=0.7
VLLM_TIMEOUT=60

# OpenRouter Configuration (for cloud inference)
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
OPENROUTER_MODEL_NAME="anthropic/claude-3-sonnet"
OPENROUTER_MAX_TOKENS=4096
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TIMEOUT=120

# Vector Database Configuration
VECTOR_DB_TYPE="chroma"
VECTOR_DB_PATH="./data/vectordb"
VECTOR_DIMENSION=384

# ChromaDB Configuration
CHROMA_HOST="localhost"
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME="rag_documents"

# Embedding Configuration
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DEVICE="cpu"  # cpu or cuda
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# RAG Configuration
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000

# File Processing
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=".txt,.pdf,.docx,.md"
UPLOAD_PATH="./data/uploads"

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Caching
CACHE_TTL=3600
# REDIS_URL="redis://localhost:6379"  # Uncomment if using Redis

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT="/metrics"