# Test Environment Configuration
# Copy this file to .env and update the values for your environment

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
BASE_URL=http://localhost:3000

# Frontend-specific Testing URLs
FRONTEND_LOGIN_URL=http://localhost:3000/login
FRONTEND_CHAT_URL=http://localhost:3000/chat
FRONTEND_DOCUMENTS_URL=http://localhost:3000/documents
FRONTEND_DASHBOARD_URL=http://localhost:3000/dashboard
FRONTEND_ADMIN_URL=http://localhost:3000/admin

# Browser Configuration
HEADLESS=true
BROWSER=chromium
SLOW_MO=0

# Test Configuration
CI=false
DEBUG_MODE=false
RECORD_VIDEO=false
TAKE_SCREENSHOTS=true
SKIP_SLOW_TESTS=false
SKIP_VISUAL_TESTS=false
SKIP_PERFORMANCE_TESTS=false

# Test Data
TEST_SEED=12345
CLEANUP_AFTER_TESTS=true
RESET_BEFORE_TESTS=false

# Authentication
ADMIN_USERNAME=admin_test
ADMIN_PASSWORD=test_password_123
USER_USERNAME=user_test
USER_PASSWORD=test_password_123
VIEWER_USERNAME=viewer_test
VIEWER_PASSWORD=test_password_123

# API Configuration
API_TIMEOUT=30000
UPLOAD_TIMEOUT=60000
CHAT_TIMEOUT=45000

# Docker Configuration
DOCKER_COMPOSE_FILE=../../deploy/compose/docker-compose.yml
DOCKER_NETWORK=rag_network

# Reporting
REPORT_FORMAT=html
JUNIT_OUTPUT=test-results/junit.xml
ALLURE_RESULTS=allure-results

# Performance Thresholds
MAX_PAGE_LOAD_TIME=5000
MAX_API_RESPONSE_TIME=3000
MAX_UPLOAD_TIME=30000
MAX_CHAT_RESPONSE_TIME=10000

# Parallel Execution
WORKERS=2
RETRIES=2
TIMEOUT=60000

# Test Tags
RUN_SMOKE_TESTS=true
RUN_REGRESSION_TESTS=true
RUN_PERFORMANCE_TESTS=false
RUN_ACCESSIBILITY_TESTS=true

# File Upload Limits
MAX_FILE_SIZE=50MB
SUPPORTED_FORMATS=txt,pdf,docx,json,csv,md

# WebSocket Configuration
WS_TIMEOUT=10000
WS_RECONNECT_ATTEMPTS=3

# Security Testing
ENABLE_XSS_TESTS=true
ENABLE_CSRF_TESTS=true
ENABLE_AUTH_TESTS=true

# Accessibility
ENABLE_A11Y_TESTS=true
A11Y_STANDARD=WCAG2AA
COLOR_CONTRAST_RATIO=4.5

# Mobile Testing
ENABLE_MOBILE_TESTS=true
MOBILE_DEVICES=iPhone,Android,iPad

# Visual Testing
ENABLE_VISUAL_TESTS=false
VISUAL_THRESHOLD=0.2
UPDATE_SNAPSHOTS=false

# Monitoring
ENABLE_MONITORING=false
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_REQUESTS=false
LOG_RESPONSES=false

# Database (for test data setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_test
DB_USER=test_user
DB_PASSWORD=test_password

# Redis (for session testing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services
ENABLE_EXTERNAL_TESTS=false
EXTERNAL_LLM_URL=
EXTERNAL_VECTOR_DB_URL=

# Notification Testing
ENABLE_NOTIFICATION_TESTS=true
NOTIFICATION_TIMEOUT=5000

# Backup and Recovery Testing
ENABLE_BACKUP_TESTS=false
BACKUP_LOCATION=/tmp/test-backups

# Load Testing
ENABLE_LOAD_TESTS=false
CONCURRENT_USERS=10
TEST_DURATION=300

# Integration Testing
ENABLE_INTEGRATION_TESTS=true
EXTERNAL_API_TIMEOUT=15000