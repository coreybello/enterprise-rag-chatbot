# Local Development Environment Configuration for LLM Providers
# Copy this file to .env in your project root

# === APPLICATION SETTINGS ===
APP_NAME=Enterprise RAG Chatbot (Dev)
APP_VERSION=1.0.0-dev
DEBUG=true
LOG_LEVEL=DEBUG

# === LLM PROVIDER CONFIGURATION ===
# For local development, use vLLM as primary with OpenRouter as fallback
LLM_PROVIDER=vllm
USE_UNIFIED_PROVIDER=true

# === FAILOVER AND LOAD BALANCING ===
FAILOVER_STRATEGY=auto
LOAD_BALANCING_STRATEGY=health_weighted
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT=30
PROVIDER_HEALTH_CHECK_INTERVAL=60

# === vLLM CONFIGURATION (Local) ===
VLLM_BASE_URL=http://localhost:8001
VLLM_MODEL_NAME=microsoft/DialoGPT-medium
VLLM_API_KEY=
VLLM_MAX_TOKENS=1024
VLLM_TEMPERATURE=0.8
VLLM_TIMEOUT=30
VLLM_MAX_RETRIES=2
VLLM_RETRY_DELAY=0.5
VLLM_CONNECT_TIMEOUT=5
VLLM_READ_TIMEOUT=30

# vLLM Development Parameters
VLLM_TOP_P=0.9
VLLM_PRESENCE_PENALTY=0.1
VLLM_FREQUENCY_PENALTY=0.1
VLLM_REPETITION_PENALTY=1.1
VLLM_STOP_TOKENS=
VLLM_BEST_OF=1
VLLM_USE_BEAM_SEARCH=false
VLLM_TOP_K=50
VLLM_LENGTH_PENALTY=1.0
VLLM_MAX_MODEL_LENGTH=2048

# === OPENROUTER CONFIGURATION (Fallback) ===
# Set your OpenRouter API key here for fallback testing
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL_NAME=anthropic/claude-3-haiku
OPENROUTER_MAX_TOKENS=2048
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TIMEOUT=60
OPENROUTER_MAX_RETRIES=2
OPENROUTER_RETRY_DELAY=1.0
OPENROUTER_HTTP_REFERER=https://github.com/enterprise-rag-dev
OPENROUTER_SITE_URL=

# OpenRouter Development Parameters
OPENROUTER_TOP_P=1.0
OPENROUTER_PRESENCE_PENALTY=0.0
OPENROUTER_FREQUENCY_PENALTY=0.0
OPENROUTER_REPETITION_PENALTY=1.0
OPENROUTER_TOP_K=0
OPENROUTER_MIN_P=0.0
OPENROUTER_SEED=42
OPENROUTER_LOGIT_BIAS={}
OPENROUTER_RESPONSE_FORMAT=
OPENROUTER_FALLBACK_MODELS=openai/gpt-3.5-turbo,meta-llama/llama-2-13b-chat
OPENROUTER_MAX_COST_PER_REQUEST=0.10
OPENROUTER_COST_THRESHOLD_WARNING=0.05
OPENROUTER_MODELS_CACHE_TTL=1800

# === RAG CONFIGURATION ===
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./data/vectordb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
CHUNK_SIZE=256
CHUNK_OVERLAP=25
RETRIEVAL_TOP_K=3
SIMILARITY_THRESHOLD=0.6
MAX_CONTEXT_LENGTH=2000

# === API CONFIGURATION ===
API_HOST=127.0.0.1
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === SECURITY (Development Only) ===
SECRET_KEY=dev-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# === CACHING ===
CACHE_TTL=1800
REDIS_URL=

# === MONITORING ===
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# === FILE PROCESSING ===
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.txt,.pdf,.md,.docx
UPLOAD_PATH=./data/uploads

# === DEVELOPMENT TOOLS ===
# Enable additional logging for development
LANGCHAIN_VERBOSE=true
LANGCHAIN_DEBUG=true